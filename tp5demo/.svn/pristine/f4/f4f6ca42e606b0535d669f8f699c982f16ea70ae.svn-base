{extend name="layout/common" /}


{block name="header"}

{/block}

{block name="body"}
<div class="row">

    <div class="col-md-12">
        <div class="box box-success">
            <div class="box-header with-border">
            </div>
            <form method="post" action="{:Url('upd')}" enctype="multipart/form-data" >
                <table class="table table-hover table-bordered">
                    <tbody>
                        <tr>
                            <td colspan="3"><h3>编辑分类</h3></td>
                        </tr>
                        <tr>
                            <td width="200">名称：</td>
                            <td colspan="3">
                                <input name="name" id="name"  size="16" type="text" value="{$info['name']}" style="width: 400px;" /> <span>*</span>
                            </td>
                        </tr>
                        <tr>
                            <td width="200">应用：</td>
                            <td colspan="3">
                                <select name="app_id" id="app_id" class="">
                                    <option value="">请选择所属应用</option>
                                    {volist name="app_list" id="vo"}
                                        <option value="{$vo.id}">{$vo.title}</option>
                                    {/volist}
                                </select>
                                <script>
                                    $("#app_id").val("{$info['app_id']}") ;
                                </script>
                            </td>
                        </tr>
                        <tr>
                            <td width="200">上级分类：</td>
                            <td colspan="3">
                                <select name="pid" id="pid" class="">
                                    <option value="">请选择类型</option>
                                    {volist name="news_type_list" id="vo"}
                                        <option value="{$vo.id}">{$vo.name_adorn}</option>
                                    {/volist}
                                </select>                           
                                <script>
                                    $("#pid").val("{$info['pid']}") ;
                                </script>
                            </td>
                        </tr>
                        <tr>
                            <td width="50">排序：</td>
                            <td colspan="3">
                                <input name="sort" id="sort"  size="16" type="text" value="{$info['sort']}" style="width: 400px;" />
                            </td>
                        </tr>
                    </tbody>
                </table>
                <div class="row-fluid" style="margin-top: 20px;margin-left: 200px;padding-bottom:20px;">
                    <notempty name="info.id"><input type="hidden" name="id" value="{$info['id']}"/></notempty>
                    <button class="btn btn-primary" type="submit">提交</button>
                    <button class="btn" type="reset" style="margin-left: 30px;">取消</button>
                </div>
            </form>
        </div>
    </div>
</div>
{/block}
